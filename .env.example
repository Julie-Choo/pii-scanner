# .env.example
# Example environment variables file
# Copy to .env and customize

# Environment
ENVIRONMENT=development

# PII Scanner Settings
PII_CONFIDENCE_THRESHOLD=0.5
PII_CONTEXT_WINDOW=50
PII_LANGUAGE=en

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Logging
LOG_LEVEL=INFO

# File Processing
MAX_FILE_SIZE_MB=50
TEMP_DIR=temp/